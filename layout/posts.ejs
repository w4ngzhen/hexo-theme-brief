<div style="width: 100%; height: 100%; overflow-y: auto; padding: 10px">
    <ul class="posts">
        <%
            site.posts.sort((p1, p2) => p2.date - p1.date).forEach(post => {
            const title = post.title;
            const dateStr = date(post.date, "YYYY年MM月DD日");
        %>
        <li class="post-item">
            <p class="date">
                <%- dateStr; %>
            </p>
            <a class="title" href="">
                <%- title; %>
            </a>
        </li>
        <% }); %>
    </ul>
</div>